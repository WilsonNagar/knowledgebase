# Database Configuration
# For Docker: use 'postgres' as the host (container name)
# For local development: use 'localhost' as the host
POSTGRES_USER=knowledgebase
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=knowledgebase
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Application Configuration
# Options: development, production
NODE_ENV=production
APP_PORT=3000
NGINX_PORT=80

# Container Names
POSTGRES_CONTAINER_NAME=knowledgebase-postgres
APP_CONTAINER_NAME=knowledgebase-app
NGINX_CONTAINER_NAME=knowledgebase-nginx

# Network Name
NETWORK_NAME=knowledgebase-network

# Volume Name
POSTGRES_VOLUME_NAME=postgres_data

# PostgreSQL Data Storage Path
# This is where PostgreSQL data will be stored on your host machine
# Default: ./data/postgres (relative to project root)
# You can use absolute paths like: /path/to/your/data/postgres
POSTGRES_DATA_PATH=./data/postgres

# Auto-indexing Configuration
# Set to 'false' to disable automatic indexing on startup
AUTO_INDEX=true
INIT_CONTAINER_NAME=knowledgebase-init
